<%= form_with model: [:merchant, @discount], local: true do |f| %>

    <%= f.label :item %>
    <%= f.collection_select(:item_id, @merchant.items, :id, :name)%>

    <%= f.label :threshold %>
    <%= f.text_field :threshold %>

    <%= f.label :discount %>
    <%= f.text_field :discount %>

    <%= f.submit %>
  <% end %>
